{
  "name": "firestore-rules-helper",
  "displayName": "FireRule Guard: Firestore Rules Generator & Linter",
  "description": "⚡️ Automatically generate secure Firestore security rules by scanning your codebase. Prevent errors and harden your database security in seconds.",
  "version": "1.0.1",
  "publisher": "SEOSiri",
  "engines": {
    "vscode": "^1.85.0"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1E1E1E",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SEOSiri-Official/firestore-rules-helper.git"
  },
  "homepage": "https://github.com/SEOSiri-Official/firestore-rules-helper/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/SEOSiri-Official/firestore-rules-helper/issues"
  },
  "keywords": [
    "firestore",
    "firebase",
    "security",
    "rules",
    "generator",
    "linter",
    "google",
    "automation",
    "typescript",
    "javascript"
  ],
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "firestore-rules",
        "extensions": [
          ".rules",
          "firestore.rules"
        ],
        "aliases": [
          "Firestore Rules"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "firestore-rules-helper.generateRules",
        "title": "FireRule Guard: Generate Rules from Codebase"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.54.0"
  }
}
